<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <p>Genre <%= f.collection_select :genre_id, Genre.all, :id, :name %></p>
  <br>
  <p>Notes</p>
  <textarea name="song[note_content][]" id="song_notes_1"></textarea><br>
  <textarea name="song[note_content][]" id="song_notes_2"></textarea><br>
  <textarea name="song[note_content][]" id="song_notes_3"></textarea><br>

  <%= f.submit %>
<% end %>


